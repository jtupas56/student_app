<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Student App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <span class="navbar-brand mb-0 h1">Student Management System</span>
      </div>
    </nav>

    <div class="container mt-4">
      <!-- Flash Messages -->
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Student List</h1>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addStudentModal">
          + Add Student
        </button>
      </div>

      <% if @students.any? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th>Student ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Code</th>
                <th>Year</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @students.each do |student| %>
                <tr>
                  <td><strong><%= student['student_ID'] %></strong></td>
                  <td><%= student['student_Name'] %></td>
                  <td><%= student['student_Email'] %></td>
                  <td><span class="badge bg-secondary"><%= student['student_Course'] %></span></td>
                  <td><code><%= student['student_Code'] %></code></td>
                  <td><%= student['student_Year'] %></td>
                  <td>
                    <%= button_to 'Remove', student_path(student['student_ID']), 
                          method: :delete, 
                          class: 'btn btn-sm btn-outline-danger',
                          form: { 
                            class: 'd-inline', 
                            onsubmit: "return confirm('Are you sure you want to remove this student?')" 
                          } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-warning" role="alert">
          No student data available at the moment.
        </div>
      <% end %>
    </div>

    <!-- Add Student Modal -->
    <div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <%= form_with url: students_path, method: :post do |form| %>
            <div class="modal-header">
              <h5 class="modal-title" id="addStudentModalLabel">Add New Student</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <%= form.label :name, 'Student Name', class: 'form-label' %>
                <%= form.text_field :name, class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= form.label :email, 'Email', class: 'form-label' %>
                <%= form.email_field :email, class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= form.label :course, 'Course', class: 'form-label' %>
                <%= form.text_field :course, class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= form.label :code, 'Student Code', class: 'form-label' %>
                <%= form.text_field :code, class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= form.label :year, 'Academic Year', class: 'form-label' %>
                <%= form.text_field :year, class: 'form-control', required: true %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <%= form.submit 'Add Student', class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <footer class="mt-5 py-3 bg-light text-center">
      <div class="container">
        <p class="mb-0 text-muted">Student App &copy; <%= Date.current.year %></p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    
    <script>
      // Auto-focus on first input when modal opens
      document.getElementById('addStudentModal').addEventListener('shown.bs.modal', function () {
        document.getElementById('student_name').focus();
      });
    </script>
  </body>
</html>